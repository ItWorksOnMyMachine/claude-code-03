    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@jest/globals": "^30.0.5",
    "@modern-js/app-tools": "2.68.10",
    "@modern-js/tsconfig": "2.68.10",
