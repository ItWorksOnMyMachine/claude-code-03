# Platform Host Environment Variables
# Copy this file to .env.local for local development

# Application
NODE_ENV=development
PORT=3002

# API Configuration
API_URL=http://localhost:5000
API_TIMEOUT=30000

# Module Federation
REMOTE_MODULES_DISCOVERY_URL=/api/federation/modules

# Asset Configuration (for production deployments)
# ASSET_PREFIX=/

# Feature Flags
ENABLE_MODULE_DISCOVERY=true
ENABLE_HEALTH_CHECKS=true

# Logging
LOG_LEVEL=debug

# Bundle Analysis (set to true to analyze bundle size)
# BUNDLE_ANALYZE=false