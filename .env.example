# Platform Development Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# PostgreSQL Platform Database Configuration
# ============================================
POSTGRES_PLATFORM_DB=platformdb
POSTGRES_PLATFORM_USER=platformuser
POSTGRES_PLATFORM_PASSWORD=DevPassword123!
POSTGRES_PLATFORM_HOST=localhost
POSTGRES_PLATFORM_PORT=5432

# Platform Database Connection String (for .NET services)
PLATFORM_CONNECTION_STRING="Host=localhost;Port=5432;Database=platformdb;Username=platformuser;Password=DevPassword123!"

# ============================================
# PostgreSQL Auth Database Configuration
# ============================================
POSTGRES_AUTH_DB=authdb
POSTGRES_AUTH_USER=authuser
POSTGRES_AUTH_PASSWORD=DevPassword123!
POSTGRES_AUTH_HOST=localhost
POSTGRES_AUTH_PORT=5433

# Auth Database Connection String (for .NET services)
AUTH_CONNECTION_STRING="Host=localhost;Port=5433;Database=authdb;Username=authuser;Password=DevPassword123!"

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=DevRedisPass123!

# Redis Connection String (for .NET services)
REDIS_CONNECTION_STRING=localhost:6379,password=DevRedisPass123!

# ============================================
# Service URLs
# ============================================
# Authentication Service
AUTH_SERVICE_URL=http://localhost:5001
AUTH_SERVICE_INTERNAL_URL=http://auth-service

# Platform BFF
PLATFORM_BFF_URL=http://localhost:5000
PLATFORM_BFF_INTERNAL_URL=http://platform-bff

# Frontend
FRONTEND_URL=http://localhost:3002
FRONTEND_INTERNAL_URL=http://platform-frontend

# ============================================
# OAuth / OpenID Connect Configuration
# ============================================
# OAuth Client Configuration for Platform BFF
AUTH_CLIENT_ID=platform-bff
AUTH_CLIENT_SECRET=DevClientSecret123!
AUTH_AUTHORITY=http://localhost:5001
AUTH_REDIRECT_URI=http://localhost:5000/signin-oidc
AUTH_POST_LOGOUT_URI=http://localhost:5000/signout-callback-oidc
AUTH_SCOPES=openid profile email offline_access

# ============================================
# Application Settings
# ============================================
# Environment
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3002,http://localhost:5000

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_SLIDING_EXPIRATION=true

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false  # Set to true for HTTPS
COOKIE_SAMESITE=Lax

# ============================================
# Development Tools Configuration
# ============================================
# Enable development endpoints
ENABLE_DEV_ENDPOINTS=true
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true

# Logging
LOG_LEVEL=Debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# ============================================
# Test User Credentials (Development Only)
# ============================================
# Default admin user
TEST_ADMIN_EMAIL=admin@platform.local
TEST_ADMIN_PASSWORD=Password123!

# Default regular user
TEST_USER_EMAIL=user@test.local
TEST_USER_PASSWORD=Password123!

# Default demo user
TEST_DEMO_EMAIL=demo@test.local
TEST_DEMO_PASSWORD=Password123!

# ============================================
# Docker Configuration
# ============================================
# Docker network subnet (if customizing)
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Volume paths (optional - uses Docker defaults if not set)
# POSTGRES_PLATFORM_VOLUME_PATH=./data/postgres-platform
# POSTGRES_AUTH_VOLUME_PATH=./data/postgres-auth
# REDIS_VOLUME_PATH=./data/redis

# ============================================
# Notes
# ============================================
# - This configuration is for DEVELOPMENT ONLY
# - Never commit actual passwords or secrets to version control
# - For production, use proper secret management
# - All passwords should be changed from defaults
# - Enable HTTPS and secure cookies for any non-localhost deployment