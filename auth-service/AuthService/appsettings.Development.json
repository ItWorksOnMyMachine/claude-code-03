{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "Microsoft.AspNetCore.Authorization": "Debug",
        "Microsoft.EntityFrameworkCore": "Information",
        "Duende": "Debug",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=authdb_dev;Username=authuser;Password=authpass123",
    "IdentityConnection": "Host=localhost;Database=authdb_dev;Username=authuser;Password=authpass123"
  },
  "IdentityServer": {
    "IssuerUri": "http://localhost:5001",
    "RequireHttpsMetadata": false,
    "ShowPII": true
  },
  "Identity": {
    "Password": {
      "RequiredLength": 6,
      "RequireDigit": false,
      "RequireUppercase": false,
      "RequireLowercase": false,
      "RequireNonAlphanumeric": false
    },
    "SignIn": {
      "RequireConfirmedEmail": false,
      "RequireConfirmedPhoneNumber": false
    }
  }
}