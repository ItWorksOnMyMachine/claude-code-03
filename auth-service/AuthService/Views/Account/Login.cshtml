@model LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="logo">
    <h1>Sign In</h1>
</div>

@if (ViewContext.HttpContext.Request.Query.ContainsKey("tenant"))
{
    <div class="tenant-info">
        Signing in to: <strong>@ViewContext.HttpContext.Request.Query["tenant"]</strong>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All"></div>
    </div>
}

<form asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    
    @if (Model.EnableLocalLogin)
    {
        <div class="form-group">
            <label asp-for="Username">Email Address</label>
            <input asp-for="Username" type="email" placeholder="user@example.com" autofocus />
            <span asp-validation-for="Username"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password"></span>
        </div>
        
        @if (Model.AllowRememberLogin)
        {
            <div class="checkbox-group">
                <input asp-for="RememberLogin" type="checkbox" />
                <label asp-for="RememberLogin">Remember me</label>
            </div>
        }
        
        <button type="submit" name="button" value="login" class="btn btn-primary">Sign In</button>
        
        @if (Context.Request.Query.ContainsKey("returnUrl"))
        {
            <button type="submit" name="button" value="cancel" class="btn btn-secondary">Cancel</button>
        }
    }
    
    @if (!Model.EnableLocalLogin && Model.ExternalProviders?.Any() == true)
    {
        <div class="alert alert-info">
            <p>External login only. Please select a provider below.</p>
        </div>
    }
</form>

@if (Model.ExternalProviders?.Any() == true)
{
    <div class="external-login">
        <h3>Or sign in with</h3>
        <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @foreach (var provider in Model.ExternalProviders)
            {
                <button type="submit" class="btn btn-secondary" name="provider" value="@provider.AuthenticationScheme">
                    @provider.DisplayName
                </button>
            }
        </form>
    </div>
}